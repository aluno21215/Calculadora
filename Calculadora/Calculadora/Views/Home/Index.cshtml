@{
    ViewData["Title"] = "Calculadora";
}

<h1 class="display-4">Calculadora</h1>
<div class="text-center">
    <form method="post">
        @* vars auxiliares*@
        <input type="hidden" value="@ViewBag.PrimeiroOperador" name="primeiroOperador" />
        <input type="hidden" value="@ViewBag.Operador" name="operador" />
        <input type="hidden" value="@ViewBag.PrimeiroOperando" name="primeiroOperando" />
        <input type="hidden" value="@ViewBag.LimpaVisor" name="limpaVisor" />

        <table border="1">
            <tr>
                <td colspan="4">
                    <input type="text" name="visor" readonly="readonly" value="@ViewBag.Visor" style="text-align:right" />
                </td>
            </tr>
            <tr>
                <td colspan="2"><input type="submit" value="C" name="botao" class="btn" /></td>

                <td><input type="submit" value="+/-" name="botao" class="btn" /></td>
                <td><input type="submit" value=":" name="botao" class="btn" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="7" name="botao" class="btn" /></td>
                <td><input type="submit" value="8" name="botao" class="btn" /></td>
                <td><input type="submit" value="9" name="botao" class="btn" /></td>
                <td><input type="submit" value="x" name="botao" class="btn" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="4" name="botao" class="btn" /></td>
                <td><input type="submit" value="5" name="botao" class="btn" /></td>
                <td><input type="submit" value="6" name="botao" class="btn" /></td>
                <td><input type="submit" value="-" name="botao" class="btn" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="1" name="botao" class="btn" /></td>
                <td><input type="submit" value="2" name="botao" class="btn" /></td>
                <td><input type="submit" value="3" name="botao" class="btn" /></td>
                <td><input type="submit" value="+" name="botao" class="btn" /></td>
            </tr>
            <tr>
                <td><input type="submit" value="0" name="botao" class="btn" /></td>
                <td><input type="submit" value="," name="botao" class="btn" /></td>
                <td colspan="2"><input type="submit" value="=" name="botao" class="btn" /></td>

            </tr>
        </table>
    </form>
</div>

